{
  "name": "fastpass-ticket-marketplace",
  "version": "1.0.0",
  "description": "A comprehensive ticket marketplace similar to Ticketmaster",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "db:setup": "cd server && npm run db:setup",
    "db:migrate": "cd server && npm run db:migrate"
  },
  "keywords": ["tickets", "marketplace", "events", "bidding"],
  "author": "FastPass Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 